                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Version:" />
                  <TextField fx:id="versionField" promptText="1.0" GridPane.columnIndex="1" />
                  <Label text="Statut:" GridPane.rowIndex="1" />
                  <ComboBox fx:id="statusCombo" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </GridPane>
      </content>
    </Tab>
      <Tab text="4. Technical">
         <content>
            <GridPane hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="150.0" />
