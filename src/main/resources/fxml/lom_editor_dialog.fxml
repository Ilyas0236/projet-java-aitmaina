                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Format (MIME):" />
                  <TextField fx:id="formatField" promptText="application/pdf, video/mp4..." GridPane.columnIndex="1" />
