<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.emsi.entities.Taxon" table="lom_taxon">
        <id name="id" column="id" type="java.lang.Long">
            <generator class="identity"/>
        </id>
        
        <property name="taxonId" column="taxon_id" type="string" length="100"/>
        <property name="entry" column="entry" type="string" length="500"/>
        
        <!-- Relation vers TaxonPath -->
        <many-to-one name="taxonPath" class="org.emsi.entities.TaxonPath" column="taxon_path_id"/>
    </class>
</hibernate-mapping>
