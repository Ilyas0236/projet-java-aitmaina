<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.emsi.entities.Educational" table="lom_educational">
        <id name="id" column="id" type="java.lang.Long">
            <generator class="identity"/>
        </id>
        
        <property name="interactivityType" column="interactivity_type" type="string" length="50"/>
        <property name="learningResourceType" column="learning_resource_type" type="string" length="100"/>
        <property name="interactivityLevel" column="interactivity_level" type="java.lang.Integer"/>
        <property name="semanticDensity" column="semantic_density" type="java.lang.Integer"/>
        <property name="intendedEndUserRole" column="intended_end_user_role" type="string" length="100"/>
        <property name="context" column="context" type="string" length="100"/>
        <property name="typicalAgeRange" column="typical_age_range" type="string" length="100"/>
        <property name="difficulty" column="difficulty" type="java.lang.Integer"/>
        <property name="typicalLearningTime" column="typical_learning_time" type="string" length="100"/>
        <property name="description" column="description" type="text"/>
        <property name="language" column="language" type="string" length="50"/>
        
        <!-- Relation vers LomSchema -->
        <many-to-one name="lomSchema" class="org.emsi.entities.LomSchema" column="lom_schema_id" unique="true"/>
    </class>
</hibernate-mapping>
